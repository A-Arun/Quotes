</head>

<body>
    <header>
    
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">GardenBay</a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="/">Home</a></li>
      <li><a href="/view">View Actions</a></li>
      <li><a href="/Completed">Completed Tasks</a></li> 
      <li><a href="/Pending">Pending</a></li> 
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
      <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
    </ul>
  </div>
        </nav>

	</header>
	<div class="clear"> </div>
    
    
    <div>
    <% for(var i=1; i<=15; i++) {%>
     <div class=" col-sm-1">

        </div>
       <div class="well col-sm-3 ">
        
           <img src="food/<%= i %>.jpg" class="img-thumbnail">
           <h2> Symphony </h2>
            <p class="alert alert-info"> Meal</p> 
           <p class="alert alert-primary"> Rs.<%= i*5 %>/-</p> 
       </div>  
       
        <% if(i%3==0) { %>
        
       <div class="clear"> </div>
                    <% } %>
        <% } %>
    </div>
                 
 <section>
        
<form action="/save" method="post">
    <table style="width:80%" class="table table-striped"  id="leftBox1">
    <tr> 
        <th> <img src="check.png" class="img-circle" alt="+"> </th> 
        <th><span class="glyphicon glyphicon-th-list"></span>  Tasks</th> 
        <th> <span class="glyphicon glyphicon-user"></span> Owner</th> 
        <th><span class="glyphicon glyphicon-calendar"></span> Target Date</th> 
    </tr>
  <% for(var i=0; i<todo.length; i++) {%>
        
   <tr class="todo">
                     
      <td style="width:5%"> <input type="checkbox" value="checked" >      </td> 
      <td style="width:65%" > <%= todo[i].task %>  </td>
       
      <td style="width:20%"> <%= todo[i].owner %> </td>
      <td style="width:15%"> <%= todo[i].tdate %> </td>
      <input type="hidden" value= "<%= todo[i]._id %>" name="id" >
       <td> <a href="<%= todo[i]._id %>"> - </a></td>
    </tr>
          
  <% } %>
        
<tr>    
    
    <td>  <button type="submit" name="submit" value="save">Save</button></td>  
    
    </tr>
      </table>
  </form>
         </section>       
  <div class="clear"> </div>
  
<article id="rightBox7">
    <h2> Add New Tasks</h2>
  <form action="/insert" method="POST">
       
<table style="width:75%">
  <tr>
      
    <th> <input type="checkbox" name="status" value="checked"> </th>
    <th> <input type="textarea"  name="task" colspan="5" placeholder="Task"></th>
    <th> <input type="text"  name="owner"  placeholder="Owner"> </th>
    <th> <input type="date"  name="tdate"></th>
    <th> <button type="submit">Add</button></th>
  </tr>
  
</table>
     
  </form>
    
</article>
  

</body>

</html>